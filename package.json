{
  "name": "nextjs-boilerplate",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "nodemon",
    "build": "NODE_ENV=production next build && tsc --project server/tsconfig.json",
    "start": "NODE_ENV=production node ./dist/index.js",
    "test": "npm run lint-nextjs && npm run lint-custom-server",
    "lint-nextjs": "tslint -p tsconfig.json -c tslint.yaml",
    "lint-custom-server": "tslint -p server/tsconfig.json -c tslint.yaml",
    "prettier": "prettier --write '**/*.{ts,tsx}'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier",
      "pre-push": "npm run test"
    }
  },
  "dependencies": {
    "@types/node": "^14.11.2",
    "@types/react": "^16.9.49",
    "next": "9.5.3",
    "next-redux-wrapper": "^6.0.2",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-redux": "^7.2.1",
    "redux": "^4.0.5",
    "redux-devtools-extension": "^2.13.8",
    "redux-promise-middleware": "^6.1.2",
    "redux-thunk": "^2.3.0",
    "typescript": "^4.0.3"
  },
  "devDependencies": {
    "@types/next-redux-wrapper": "^3.0.0",
    "@types/react-redux": "^7.1.9",
    "@types/redux-immutable-state-invariant": "^2.1.1",
    "git-revision-webpack-plugin": "^3.0.6",
    "husky": "^4.3.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2",
    "redux-immutable-state-invariant": "^2.1.0",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "tslint-consistent-codestyle": "^1.16.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-lines-between-class-members": "^1.3.6",
    "tslint-loader": "^3.5.4",
    "tslint-microsoft-contrib": "^6.2.0",
    "tslint-react": "^5.0.0"
  }
}
